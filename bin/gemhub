#!/usr/bin/env ruby

require 'rubygems'
require 'rubigen'

if %w(-v --version).include? ARGV.first
  require 'gemhub'
  puts "#{File.basename($0)} #{GemHub::VERSION}"
  exit(0)
end

require 'rubigen/scripts/generate'
RubiGen::Base.use_application_sources!
RubiGen::Scripts::Generate.new.run(ARGV, :generator => 'gemhub')